<UserControl x:Class="MurbongTimeScheduler.Views.TimePicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MurbongTimeScheduler.Views"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="100">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox x:Name="HourTxt" VerticalContentAlignment="Center" TextAlignment="Center" MinWidth="30" MaxLength="2" TextChanged="HourTxt_TextChanged">
                10
            </TextBox>
            <TextBlock> : </TextBlock>
            <TextBox x:Name="MinuteTxt" VerticalContentAlignment="Center" TextAlignment="Center" MinWidth="30" MaxLength="2" TextChanged="MinuteTxt_TextChanged">
                10
            </TextBox>
        </StackPanel>
    </Grid>
</UserControl>
